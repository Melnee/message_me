
<%= link_to "Chatroom", root_path, class: "active item"%>
<a class="item">
    Messages
</a>
<div class="right menu">
    <% if logged_in? %>
        <div class="item">
            <%= link_to "Logout", logout_path, method: :delete, class: "ui primary button"%>
        </div>
    <% else %>
        <div class="item">
            <%= link_to "Login", login_path, class: "ui primary button"%>
        </div>
        <div class="item">
            <div class="ui primary button">Sign Up</div>
        </div>
    <% end %>
</div>